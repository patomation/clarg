{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "scope-enum": [
      2,
      "always",
      [
        "deps",
        "dev",
        "doc",
        "help",
        "index",
        "scripts",
        "test",
        "typescript",
        "update",
        "version"
      ]
    ]
  }
}